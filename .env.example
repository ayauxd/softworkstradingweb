# Softworks Trading Web - Environment Configuration

# AI Service API Keys (required for full functionality)
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_DEFAULT_VOICE_ID=Nhs7eitvQWFTQBsf0yiT
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=production  # Change to production for deployment
HOST=0.0.0.0
API_TIMEOUT=30000

# Security Configuration
CSRF_SECRET=generate_a_random_string_here
SESSION_SECRET=replace_with_at_least_32_characters_long_secret_key

# Client URL (used for CORS in production)
CLIENT_URL=https://your-render-deployment-url.onrender.com

# Optional: API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Database Configuration (if using one)
# DATABASE_URL=your_database_connection_string_here

# Optional: Email Configuration (for call summaries)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password
# EMAIL_FROM=noreply@softworkstrading.com
# CALL_SUMMARY_EMAIL=agents@softworkstrading.com
# FORCE_EMAIL_IN_DEV=true  # Uncomment to force email sending in development mode